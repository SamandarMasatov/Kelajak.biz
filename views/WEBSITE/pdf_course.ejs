<style>
.pdf-container{
     width: 90%;
     margin: 0 auto;
}
.pdf-title{
    text-align: center;
    margin-top: 20px;
    margin-bottom: 10px;
    font-size: 36px;
}
.pdf-about{
    text-align: center;
    margin-bottom: 10px;
    font-size: 24px;
}
.pdf-description{
    text-align: center;
    font-size: 18px;
    margin-bottom: 10px;
}
.pdf-wrapper{
    width: 100%;
    height: 77vh;
}
@media (max-width: 768px){
    .pdf-container{
     width: 98%;
     margin: 0 auto;
}
.pdf-wrapper{
    width: 100%;
    height: 100vh;
}
}
</style>

<div class="pdf-container">
    <% for (let item of result) { %>
        <h2 class="pdf-title"><%= item.title %></h2>
        <h3 class="pdf-about">Kitob haqida</h3>
        <p class="pdf-description"><%= item.description %></p>
        <div class="pdf-wrapper">
            <object data="https://docs.google.com/gview?embedded=true&amp;url=https://kelajak.biz/uploads/books/<%= item.pdf %>" width="100%" height="100%"> 
        </div>
           <%}%>
</div>




    
