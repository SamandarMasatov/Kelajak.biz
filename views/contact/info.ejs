<div class="col-md-12">
  <div class="card m-b-30">
    <div class="card-body">
      <h4 class="mt-2 mb-4">Xabarnoma haqida </h4>
      <ul class="nav nav-pills nav-justified" role="tablist">
        <li class="nav-item waves-effect waves-light">
          <a class="nav-link active" data-toggle="tab" href="#home-1" role="tab">
            <span class="d-none d-md-block font-14">Xabarlar</span>
            <span class="d-block d-md-none"><i class="mdi mdi-home-variant h5"></i></span>
          </a>
        </li>
        <li class="nav-item waves-effect waves-light">
          <a class="nav-link" data-toggle="tab" href="#profile-1" role="tab">
            <span class="d-none d-md-block font-14">Fydalanuvchining rasmi</span>
            <span class="d-block d-md-none"><i class="mdi mdi-account h5"></i></span>
          </a>
        </li>
        <li class="nav-item waves-effect waves-light">
          <a class="nav-link" data-toggle="tab" href="#profile-2" role="tab">
            <span class="d-none d-md-block font-14">Foydalanuvchi qoldirgan habar</span>
            <span class="d-block d-md-none"><i class="mdi mdi-account h5"></i></span>
          </a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active p-3" id="home-1" role="tabpanel" style="overflow-x: scroll;">
          <table class="table table-bordered border-primary text-center">
            <thead>
              <tr>
                <th scope="col" style="font-weight: 600; width: 30%;">Bo'limlar</th>
                <th scope="col" style="font-weight: 600;">Ma'lumotlar</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Foydalanuvchining ismi</td>
                <td>
                  <%= result.username.name %>
                </td>
              </tr>
              <tr>
                <td>Foydalanuvchining telefon raqami</td>
                <td>
                  <%= result.username.phone %> / <%= result.phone %>
                </td>
              </tr>
              <tr>
                <td>Foydalanuvchining pochtasi</td>
                <td>
                  <%= result.username.email %>
                </td>
              </tr>
              <tr>
                <td>Foydalanuvchining uid raqami</td>
                <td>
                  <%= result.username.uid %>
                </td>
              </tr>
              <tr>
                <td>Foydalanuvchining statusi</td>
                <td>
                  <%= result.username.status %>
                </td>
              </tr>

              <tr>
                <td>Yaratilgan sana</td>
                <td>
                  <%= moment(result.date).format("DD-MM-YYYY - hh:mm:ss") %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="tab-pane p-3" id="profile-1" role="tabpanel">
          <img class="col-md-6 offset-3 mt-5" src="/uploads/course/<%= result.image %>" name="image">
        </div>
        <div class="tab-pane p-3" id="profile-2" role="tabpanel">
          <p><%=  result.message %> </p>
        </div>



      </div>
    </div>
  </div>
</div>