<div class="wrapper-page">
  <div class="card card-pages shadow-none">
    <div class="card-body">
      <h5 class="font-18 text-center">Authorization</h5>

      <form class="form-horizontal m-t-30" action="/auth/login" method="POST">
        <div class="form-group">
          <div class="col-12">
            <label>Email</label>
            <input
              class="form-control"
              name="email"
              type="email"
              required="true"
              placeholder="Enter your email"
            />
          </div>
        </div>

        <div class="form-group">
          <div class="col-12">
            <label>Password</label>
            <input
            name="password"
              class="form-control"
              type="password"
              required="true"
              placeholder="Enter your password"
            />
          </div>
        </div>

        <div class="form-group text-center m-t-20">
          <div class="col-12">
            <button
              class="btn btn-primary btn-block btn-lg waves-effect waves-light"
              type="submit"
            >
              Log In
            </button>
          </div>
        </div>

        
      </form>
    </div>
  </div>
</div>
