
  <div class="row">
    <div class="col-12">
      <div
        style="
          display: flex;
          flex-direction: row;
          justify-content: space-between; 
          align-items: center;
        "
      >
        <h4 class="m-3" style="font-weight: 700;">Barcha mavzular ro'yhati</h4>
        <button
          type="button"
          class="btn btn-primary waves-effect waves-light"
          data-toggle="modal"
          data-target=".bs-example-modal-lg"
        >
          Mavzu qo'shish
        </button>
      </div>
  
      <div class="card m-b-30">
        <div class="card-body" style="overflow-x: scroll">
          <table id="datatable" class="table table-bordered text-center" style="border-collapse: collapse; border-spacing: 0; width: 100%" >
            <thead>
              <tr>
                <th>Mavzu nomi</th>
                <th>Yaratilgan sana</th>
                <th style="width: 10%">Sozlamalar</th>
              </tr>
            </thead>
  
            <tbody>
              <% for(let item of result) {%>
              <tr>
                <td><%= item.name %></td>
                <td><%= moment(item.date).format("DD-MM-YYYY - hh:mm:ss") %></td>
                <td style=" display: flex; flex-direction: row; justify-content: space-around; align-items: center;" >
                 
                  <a class="btn btn-warning" href="<%=`/section/${item._id}`%>">
                    <i class="fas fa-cog"></i>
                  </a>
                  <form method="POST" class="hidden-r" action="<%=`/section/${item._id}?_method=DELETE`%>" >
                    <button type="submit" class="btn btn-danger">
                      <i class="fa fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- end col -->
  </div>
  
  <div
    class="modal fade bs-example-modal-lg"
    tabindex="-1"
    role="dialog"
    aria-labelledby="myLargeModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title mt-0" id="myLargeModalLabel">Kurs yaratish</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/section/add" method="POST"  >


            <div class="input-group mb-3">
              <select
                name="course_ID"
                class="form-control"
                value=""
              >
                <option style="font-weight: bold">Kerakli kursni tanlang</option>
                <% for (let item of course) {%>
                <option value="<%= item._id %>"><%= item.title %></option>
                <% } %>
              </select>
            </div>


            <div class="mb-3">
              <input type="text" name="name" class="form-control" placeholder="Mavzu nomini kiriting"/>
            </div>
            
           
            <button type="submit" class="btn btn-primary">Saqlash</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
 
  