
  
  <div class="row">
    <div class="col-12">
      <div
        style="
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
        "
      >
        <h4 class="m-3" style="font-weight: 700">
          Barcha testlar ro'yhati
        </h4>
        <a type="button"
        class="btn btn-primary waves-effect waves-light" href="/admin/test">Test qo'shish</a>
      </div>
  
      <div class="card col-md-12 table-responsive">
        <div class="card-body table-responsive">
          <table id="datatable" class="table table-bordered text-center "
            style="border-collapse: collapse; border-spacing: 0; width: 150%; flex-wrap: wrap;">
            <thead>
              <tr>
                <th >Test savoli</th>
                <th style="width: 20%">Yaratilgan sana</th>
                <th style="width: 15%">Sozlamalar</th>
              </tr>
            </thead>
  
            <tbody>
              <% for(let item of result) {%>
              <tr>
              
                <td style="text-align: left;"><%= item.question  %> </td>
                <td><%= moment(item.date).format("DD-MM-YYYY - hh:mm:ss") %></td>
                <td
                  style="
                    display: flex;
                    flex-direction: row;
                    justify-content: space-around;
                    align-items: center;
                  "
                >
                <a class="btn btn-success" href="<%=`/test/info/${item._id}`%>">
                  <i class="fa fa-eye"></i>
              </a>
                  <a class="btn btn-warning" href="<%=`/test/${item._id}`%>">
                    <i class="fas fa-cog"></i>
                  </a>
                  <form
                    method="POST"
                    class="hidden-r"
                    action="<%=`/test/${item._id}?_method=DELETE`%>"
                  > 
                    <button type="submit" class="btn btn-danger">
                      <i class="fa fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- end col -->
  </div>
  


